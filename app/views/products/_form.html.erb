<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, "Название" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :full_name, "Полное название" %>
    <%= form.text_field :full_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price, "Цена" %>
    <%= form.text_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, "Описание" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :production_date, "Дата производства" %>
    <%= form.date_field :production_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :guarantee, "Гарантия (месяцы)" %>
    <%= form.number_field :guarantee, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :producer_id, "ID производителя" %>
    <%= form.text_field :producer_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :discount, "Скидка (%)" %>
    <%= form.text_field :discount, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Сохранить", class: "btn-submit" %>
  </div>
<% end %>
