<h1>Редактирование продавца</h1>

<div class="back-container">
  <%= link_to sellers_path, class: 'btn-back' do %>
    <i class="fas fa-arrow-left"></i>
  <% end %>
</div>

<%= form_with model: @seller, local: true do |form| %>
  <% if @seller.errors.any? %>
    <div id="error_explanation" class="error-container">
      <h2><%= pluralize(@seller.errors.count, "ошибка") %> не позволила сохранить этого продавца:</h2>

      <ul>
        <% @seller.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, "Название" %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :contact_info, "Контактная информация" %>
    <%= form.text_field :contact_info, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :address, "Адрес" %>
    <%= form.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :phone_number, "Телефон" %>
    <%= form.text_field :phone_number, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :email, "Электронная почта" %>
    <%= form.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-actions">
    <%= form.submit "Сохранить", class: 'btn-submit' %>
  </div>
<% end %>
