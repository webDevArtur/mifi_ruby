<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(user.errors.count, "ошибка") %> не позволила сохранить этого пользователя:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :Логин %>
    <%= form.text_field :login, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :Роль %>
    <%= form.select(:permissions, options_for_select(User::ROLES.map{|k, v| [v, k]}, form.object.permissions), include_blank: true, class: "form-control") %>
  </div>

  <div class="form-group">
    <%= form.label :Пароль %>
    <%= form.text_field :plain_password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Сохранить", class: "btn-submit" %>
  </div>
<% end %>
